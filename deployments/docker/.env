# Zero Trust NMS Environment Configuration
# All services use admin/admin for easy development access

# PostgreSQL
POSTGRES_PASSWORD=admin
POSTGRES_USER=ztnms
POSTGRES_DB=ztnms

# Redis
REDIS_PASSWORD=admin

# Grafana (login: admin / admin)
GRAFANA_PASSWORD=admin

# API Gateway
ZTNMS_SERVER_PORT=8080
ZTNMS_LOG_LEVEL=info

# TLS (set to true for production)
ZTNMS_TLS_ENABLED=false

# Issuer
ZTNMS_ISSUER_ID=zt-nms-issuer-1
